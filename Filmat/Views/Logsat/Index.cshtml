}



    <h3 style="color: white">Logs for Users and Movies:</h3>
<br />
<br />
<br />

<table class="table">



    <thead>
        <tr>
            <th style="color:white" scope="col">Actor</th>
            <th style="color:white" scope="col">Action</th>
            <th style="color:white" scope="col">Entity</th>
            <th style="color:white" scope="col">Name</th>
            <th style="color:white" scope="col">Date/Time</th>
        </tr>
    </thead>


    <tbody style="border:1.5px solid white">

        @foreach (var item in Model)
        {




            if (item.Item.Equals("AdministrationController"))
            {

                if (item.Action.Equals("Create"))
                {
                    <tr class="table-success">
                        <th scope="row">@item.User</th>
                        <th>Created</th>
                        <th>User</th>
                        <th>@item.Details</th>
                        <th>@item.Timestamp</th>
                    </tr>
                }

                if (item.Action.Equals("Update"))
                {
                    <tr class="table-warning">
                        <th scope="row">@item.User</th>
                        <th>Updated</th>
                        <th>User</th>
                        <th>@item.Details</th>
                        <th>@item.Timestamp</th>
                    </tr>
                }
                if (item.Action.Equals("Delete"))
                {
                    <tr class="table-danger">
                        <th scope="row">@item.User</th>
                        <th>Deleted</th>
                        <th>User</th>
                        <th>@item.Details</th>
                        <th>@item.Timestamp</th>
                    </tr>

                }


            }

            if (item.Item.Equals("MoviesController"))
            {

                if (item.Action.Equals("Create"))
                {
                    <tr class="table-success">
                        <th scope="row">@item.User</th>
                        <th>Created</th>
                        <th>Movie</th>
                        <th>@item.Details</th>
                        <th>@item.Timestamp</th>
                    </tr>
                }

                if (item.Action.Equals("Update"))
                {
                    <tr class="table-warning">
                        <th scope="row">@item.User</th>
                        <th>Updated</th>
                        <th>Movie</th>
                        <th>@item.Details</th>
                        <th>@item.Timestamp</th>
                    </tr>
                }
                if (item.Action.Equals("Delete"))
                {
                    <tr class="table-danger">
                        <th scope="row">@item.User</th>
                        <th>Deleted</th>
                        <th>Movie</th>
                        <th>@item.Details</th>
                        <th>@item.Timestamp</th>
                    </tr>

                }


            }




        }


    </tbody>


</table>

