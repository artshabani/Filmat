        <div class="title">
            <div class="content">
                <h1>Watch your favorite movies, TV shows and more.</h1>
                <div class="login">
                    <h3>Ready to watch? Enter your email and get access to unlimited fun!</h3>
                    <div class="email">
                        <button><a asp-controller="Account" asp-action="Register">Sign In</a></button>
                        <button><a asp-controller="Account" asp-action="Login">Log In</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

  

<div class="style-cards">

    
    <div class="card-0">
        @foreach (var item in Model)
        {
            <div class="desc-0">
                <h1>The most viewed movie is : </h1>
                <h2><i>@item.Name</i></h2>
            </div>
        <a asp-action="PlayMovie" asp-route-id="@item.Id">
            <img src="@item.ImageURL" alt="@item.Name">
            
        </a>
        }
    </div>
    
</div>

