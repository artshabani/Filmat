@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
 <link href="@Url.Content("~/css/movies.css")" rel="stylesheet" />
 <link href="@Url.Content("~/css/HomePage.css")" rel="stylesheet" />

    


     <div class="container">
        <nav class="navbar">
            <div class="left">
                <img src="../css/images/frame-2.png" alt="logo">
            </div>
