@model Movie

@{
    ViewData["Title"] = "Delete movie";
}

@section Styles{
    <link href="@Url.Content("~/css/PlayMovie.css")" rel="stylesheet" />

}


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete movie: @Model.Name ?</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group">
                    <label asp-for="ImageURL" class="control-label"></label>
                    <input asp-for="ImageURL" class="form-control" disabled />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" disabled />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" class="form-control" disabled />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MovieCategory" class="control-label"></label>
                    <input asp-for="MovieCategory" class="form-control" disabled />
                    <span asp-validation-for="MovieCategory" asp-items="Html.GetEnumSelectList<MovieCategory>()" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VideoURL" class="control-label"></label>
                    <input asp-for="VideoURL" class="form-control" disabled />
                    <span asp-validation-for="VideoURL" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    @*<a type="submit" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-success float-right">Confirm</a>*@
                    <a class="btn btn-outline-secondary" asp-action="Index">Decline</a>
                </div>
                

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ImageURL").val();
        })
        $("#ImageURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}