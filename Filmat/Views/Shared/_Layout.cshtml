<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Filmat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Filmat.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
    <link href="@Url.Content("~/css/global_style.css")" rel="stylesheet"/>
    @RenderSection("Styles", required: false)
   
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">UBT Play</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" asp-controller="Home" asp-action="Index">Home<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-controller="Movies" asp-action="Index">Movies</a>
      </li>

      @if (ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Movies")
  {
      <li class="nav-item dropdown">

      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Categories
        </a>
      
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">

          <a class="dropdown-item" asp-controller="Movies" asp-action="MoviesByCategory" asp-route-category="horror">Horror</a>
          <a class="dropdown-item" asp-controller="Movies" asp-action="MoviesByCategory" asp-route-category="Drama">Drama</a>
          <a class="dropdown-item" asp-controller="Movies" asp-action="MoviesByCategory" asp-route-category="Comedy">Comedy</a>
          <a class="dropdown-item" asp-controller="Movies" asp-action="MoviesByCategory" asp-route-category="Action">Action</a>

        </div>

        </li>

        }

      @if(signInManager.IsSignedIn(User) && User.IsInRole("Admin")){
      <li class="nav-item dropdown">

        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Manage
        </a>
      
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" asp-action="ListUsers" asp-controller="Administration">Users</a>
          <a class="dropdown-item" asp-controller="Movies" asp-action="Index">Movies</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" asp-action="Index" asp-controller="Logsat">Logs</a>
          <a class="dropdown-item" asp-action="ListRoles" asp-controller="Administration">Roles</a>
        </div>

      </li>
      }
       @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-action="Logout" asp-controller="Account">
                                    <button type="submit" class="nav-link btn btn-link py-0" style="width:auto;margin-top: 14px;">
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                        }



    </ul>
    
@if ((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Movies")
|| (ViewContext.RouteData.Values["action"].ToString() == "Search" && ViewContext.RouteData.Values["controller"].ToString() == "Movies"))
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <form method="post" asp-action="Search" class="form-inline my-2 my-lg-0">
                            <input name="searchQuery" style="margin-left:120vh; margin-top:0.7534983853606028vh;" class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                            <button style="margin-top:0.7534983853606028vh;" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    }
                    @if (!(User.IsInRole("Admin")))
                    {
                        <form method="post" asp-action="Search" class="form-inline my-2 my-lg-0">
                            <input name="searchQuery" style="margin-left:125vh; margin-top:0.7534983853606028vh;" class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                            <button style="margin-top:0.7534983853606028vh;" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    }
                }

    
  </div>
</nav>
