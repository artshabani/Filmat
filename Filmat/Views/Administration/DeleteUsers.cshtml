@model ApplicationUser

@{
    ViewData["Title"] = "User Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for: @Model.Emri</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
               
                    
                    
                    <div class="form-group">
                        <label asp-for="Emri" class="control-label"></label>
                        <input asp-for="Emri" class="form-control" disabled />
                        <span asp-validation-for="Emri" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" disabled />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" disabled />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div> 

                    
                    
                    <div class="form-group">  
                        <form asp-action="Delete">
                        <a class="btn btn-outline-succes float-right" asp-action="DeleteConfirmed"  asp-route-id="@Model.Id">Delete</a>
                    
                        <a class="btn btn-outline-secondary" asp-action="ListUsers">Cancel</a>
                        </form>
                    </div>
                
            </div>
        </div>
    </div>
</div>

